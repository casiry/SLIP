<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@drawable/slip_togglebutton"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/background" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:background="@color/background"
        android:orientation="vertical" >

        <!-- Display Text View -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/slip_togglebutton"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_display_text"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:gravity="center_horizontal"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/text"
                android:textSize="@dimen/textDimMed" />

            <TextView
                android:id="@+id/tv_display_disclaimer"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:gravity="center_horizontal"
                android:textColor="@color/text_faded"
                android:textSize="@dimen/textDimSm" />
        </LinearLayout>

        <!-- Zone Buttons -->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:layout_weight="0.25"
            android:background="@color/background"
            android:orientation="horizontal" >

            <ToggleButton
                android:id="@+id/btn_zone_a"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:layout_weight=".33"
                android:background="@drawable/slip_togglebutton"
                android:textColor="@drawable/slip_button_text_color"
                android:textOff="@string/btnZoneAOff"
                android:textOn="@string/btnZoneAOn"
                android:textSize="@dimen/btnDim"
                tools:ignore="NestedWeights" />

            <ToggleButton
                android:id="@+id/btn_zone_b"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:layout_weight=".33"
                android:background="@drawable/slip_togglebutton"
                android:textColor="@drawable/slip_button_text_color"
                android:textOff="@string/btnZoneBOff"
                android:textOn="@string/btnZoneBOn"
                android:textSize="@dimen/btnDim" />

            <ToggleButton
                android:id="@+id/btn_zone_c"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:layout_weight=".33"
                android:background="@drawable/slip_togglebutton"
                android:textColor="@drawable/slip_button_text_color"
                android:textOff="@string/btnZoneCOff"
                android:textOn="@string/btnZoneCOn"
                android:textSize="@dimen/btnDim" />
        </LinearLayout>

        <!-- Price Toggle Switch -->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:layout_weight=".25"
            android:gravity="center"
            android:orientation="horizontal" >

            <ToggleButton
                android:id="@+id/btn_price_full"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_margin="2dp"
                android:layout_weight=".5"
                android:background="@drawable/slip_togglebutton"
                android:textColor="@drawable/slip_button_text_color"
                android:textOff="@string/btnPriceRedOff"
                android:textOn="@string/btnPriceRedOff"
                android:textSize="@dimen/textDimMed"
                tools:ignore="NestedWeights" />

            <ToggleButton
                android:id="@+id/btn_price_red"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_margin="2dp"
                android:layout_weight=".5"
                android:background="@drawable/slip_togglebutton"
                android:textColor="@drawable/slip_button_text_color"
                android:textOff="@string/btnPriceRedOn"
                android:textOn="@string/btnPriceRedOn"
                android:textSize="@dimen/textDimMed" />
        </LinearLayout>

        <!-- Send Button -->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:layout_weight="0.25"
            android:background="@color/background"
            android:orientation="vertical" >

            <Button
                android:id="@+id/btn_send"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/slip_button"
                android:text="@string/btnSend"
                android:textColor="@drawable/slip_button_text_color"
                android:textSize="@dimen/textDim" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>