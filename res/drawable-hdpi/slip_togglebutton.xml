<selector xmlns:android="http://schemas.android.com/apk/res/android">
    
    <item android:state_checked="true">
		<shape android:shape="rectangle">
	        <gradient android:angle="270" android:endColor="@color/grad_end_on" android:startColor="@color/grad_start_on" />
	        <stroke android:width="1dp" android:color="@color/border_on" />
			<corners android:radius="10dip" />	            
		</shape>
	</item>	
    
    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <gradient android:angle="90" android:endColor="@color/grad_end_off" android:startColor="@color/grad_start_off" />
            <stroke android:width="1dp" android:color="@color/border_off" />
            <corners android:radius="10dip" />
        </shape>
	</item>
	
    <item>
        <shape android:shape="rectangle">
            <gradient android:angle="270" android:endColor="@color/grad_end_off" android:startColor="@color/grad_start_off" />
            <stroke android:width="1dp" android:color="@color/border_off" />
            <corners android:radius="10dip" />
            <padding android:left="2dp" android:right="2dp" android:top="2dp" android:bottom="2dp" />
        </shape>
	</item>
</selector>